#version 410 coreout vec4 fragColor;in vec2 v_TexCoords;uniform sampler2D texture_diffuse1;uniform sampler2D texture_specular1;uniform sampler2D texture_normal1;uniform bool u_NegativeTexCoord;uniform int x;void main(){     /*        just using the uniforms so that openGL doesn't PISS ME OF     */    vec4 result = texture(texture_diffuse1, v_TexCoords) * texture(texture_specular1, v_TexCoords) * texture(texture_normal1, v_TexCoords);    if(!u_NegativeTexCoord)        fragColor = texture(texture_diffuse1, v_TexCoords);    else        fragColor = texture(texture_diffuse1, vec2(v_TexCoords.x, -v_TexCoords.y));}